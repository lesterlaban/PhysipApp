<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhysipApp.Views.RecursoDetailPage"
             Title="{Binding Title}">
        <StackLayout Spacing="20" Padding="15">
            <Label Text="Titulo" FontSize="Medium" TextColor="{StaticResource Primary}"/>
            <Label Text="{Binding Titulo}" FontSize="Small" TextColor="{StaticResource Primary}"/>
            
            <Label Text="Descripcion" FontSize="Medium" />
            <Label Text="{Binding Description}" FontSize="Small"/>

            <WebView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"  Source="{Binding Url}"/>
        </StackLayout>
</ContentPage>